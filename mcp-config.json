{
  "mcpServers": {
    "thales-cdsp-csm-stdio": {
      "command": ".venv\\Scripts\\python.exe",
      "args": ["main.py", "--transport", "stdio"],
      "env": {
        "AKEYLESS_API_URL": "https://api.akeyless.io",
        "AKEYLESS_ACCESS_ID": "your_access_id_here",
        "AKEYLESS_ACCESS_KEY": "your_access_key_here",
        "MCP_SERVER_NAME": "Thales CDSP CSM Secrets Vault",
        "MCP_SERVER_VERSION": "1.0.0"
      }
    },
    "thales-cdsp-csm-http": {
      "command": ".venv\\Scripts\\python.exe",
      "args": ["main.py", "--transport", "streamable-http", "--host", "0.0.0.0", "--port", "8000"],
      "env": {
        "AKEYLESS_API_URL": "https://api.akeyless.io",
        "AKEYLESS_ACCESS_ID": "your_access_id_here",
        "AKEYLESS_ACCESS_KEY": "your_access_key_here",
        "MCP_SERVER_NAME": "Thales CDSP CSM Secrets Vault",
        "MCP_SERVER_VERSION": "1.0.0"
      }
    }
  }
} 